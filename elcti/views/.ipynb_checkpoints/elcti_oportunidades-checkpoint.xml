        <!-- FORMULARIO -->
        <record id="elcti_oportunidades_form" model="ir.ui.view">
            <field name="name">elcti.oportunidades.form</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <form class="o_lead_opportunity_form" js_class="crm_form" create="false">
                    <header>
                        <field name="stage_id" widget="statusbar" clickable="1" domain="[('id', 'not in', [1,2,3,4])]"/>
                    </header>
                    <sheet>
                        <field name="team_id" invisible="1"/>
                        <field name="active" invisible="1"/>
                        <field name="type" invisible="1"/>
                        <field name="is_blacklisted" invisible="1"/>
                        <field name="phone_blacklisted" invisible="1"/>
                        <!-- BOTONES -->
                        <div class="oe_button_box" name="button_box">
                            <button name="%(crm_medix_calendario_contacto)d"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-calendar">
                                <div class="o_stat_info">
                                    <field name="meeting_count" class="o_stat_value"/>
                                    <span class="o_stat_text">Citas Médicas</span>
                                </div>
                            </button>
                            <button name="%(crm_medix_llamadas_contacto)d"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-phone">
                                <div class="o_stat_info">
                                    <field name="conteo_llamadas" class="o_stat_value"/>
                                    <span class="o_stat_text">Llamadas</span>
                                </div>
                            </button>
                            <!--button type="action" name="671" class="oe_stat_button" icon="fa-phone" context="{'partner_id': partner_id}" attrs="{'invisible': [('type', '=', 'lead')]}"><span class="o_stat_text">Ola k ase</span></button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Paciente"/>
                            <h1>
                                <field name="name" placeholder="Nombre del paciente"/>
                            </h1>
                            <!--h2 class="o_row no-gutters align-items-end"></h2-->
                        </div>
                        <group>
                            <group>
                                <field name="nombres" string="Nombres"/>
                                <field name="primer_apellido" string="Primer Apellido"/>
                                <field name="segundo_apellido" string="Segundo Apellido"/>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Dirección" class="o_address_street"/>
                                    <field name="country_id" placeholder="País" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                    <field name="state_id" class="o_address_state" placeholder="Estado" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                    <field name="ciudad" placeholder="Ciudad/Delegación" class="o_address_city" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                    <field name="city" placeholder="Municipio/Colonia" class="o_address_city"/>
                                    <field name="zip" placeholder="C.P." class="o_address_zip"/>
                                </div>
                                <label for="email_from" class="oe_inline"/>
                                <div class="o_row o_row_readonly">
                                    <button name="mail_action_blacklist_remove" class="fa fa-ban text-danger" title="This email is blacklisted for mass mailings. Click to unblacklist." type="object" context="{'default_email': email_from}" groups="base.group_user" attrs="{'invisible': [('is_blacklisted', '=', False)]}"/>
                                    <field name="email_from" string="Email" widget="email"/>
                                </div>
                                <label for="phone" class="oe_inline"/>
                                <div class="o_row o_row_readonly">
                                    <button name="phone_action_blacklist_remove" class="fa fa-ban text-danger" title="This phone number is blacklisted for SMS Marketing. Click to unblacklist." type="object" context="{'default_phone': phone}" groups="base.group_user" attrs="{'invisible': [('phone_blacklisted', '=', False)]}"/>
                                    <field name="phone" widget="phone"/>
                                </div>
                            </group>
                            <group>
                                <!--field name="x_studio_etapa" string="etapa" attrs="{}" invisible="1"/-->
                                <field name="fecha_de_nacimiento" string="Fecha de nacimiento"/>
                                <field name="edad" string="Edad"/>
                                <field name="sexo" widget="statusbar" clickable="1"/>
                                <field name="clasificacion_imc" string="Clasificacion IMC"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <!--field name="llamada_contacto" widget="statusbar" clickable="1" style="display: flex; flex-direction: column-reverse"/-->
                                <!--field name="llamada_contacto"/-->
                                <field name="acepta_politica"/>
                            </group>
                            <group>
                                <label for="recordar_meses" string="Recordar en"/>
                                <div>
                                    <field name="recordar_meses" string="Recordar en (meses)"/>
                                    <span class="mx-1 clearfix">Meses</span>
                                    <field name="recordar_semanas" string="Recordar en (semanas)"/>
                                    <span class="mx-1 clearfix">Semanas</span>
                                    <field name="recordar_dias" string="Recordar en (días)"/>
                                    <span class="mx-1 clearfix">Días</span>
                                    <field name="recordar_horas" string="Recordar en (horas)"/>
                                    <span class="mx-1 clearfix">Horas</span>
                                    <field name="recordar_minutos" string="Recordar en (minutos)" widget="integer"/>
                                    <span class="mx-1 clearfix">Minutos</span>
                                </div>
                            </group>
                        </group>
                        <notebook>
                            <page string="Cuestionario llave" name="cuestionario_llave">
                                <field name="cuestionario_llave"/>
                            </page>
                            <page string="Citas de consultorio" name="citas">
                                <field name="citas"/>
                            </page>
                            <page string="Llamadas" name="llamadas">
                                <field name="llamadas"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>