<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- MENU PRINCIPAL -->
        <menuitem id="crm_medix_root"
                  name="CRM En Línea Con Tu Imagen"
                  web_icon="elcti,static/description/elcti.png"
                  sequence="1"/>
        
        <!-- OPORTUNIDADES -->
        <record id="crm_medix_oportunidades" model="ir.actions.act_window">
            <field name="name">CRM En Línea Con Tu Imagen</field>
            <field name="res_model">crm.lead</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                                         (0, 0, {'view_mode': 'kanban', 'view_id': ref('elcti_oportunidades_kanban')}),
                                         (0, 0, {'view_mode': 'form', 'view_id': ref('elcti_oportunidades_form')})]"/>
        </record>
        <menuitem id="crm_medix_menu_oportunidades"
                  name="Oportunidades"
                  parent="crm_medix_root"
                  action="crm_medix_oportunidades"
                  sequence="2"/>
        
        <!-- CALENDARIO -->
        <record id="crm_medix_calendario" model="ir.actions.act_window">
            <field name="name">Calendario de citas</field>
            <field name="res_model">calendar.event</field>
            <field name="view_mode">calendar</field>
            <field name="view_ids" eval="[(5, 0, 0),
                                         (0, 0, {'view_mode': 'calendar', 'view_id': ref('elcti_calendario_calendar')}),
                                         (0, 0, {'view_mode': 'form', 'view_id': ref('elcti_calendario_form')})]"/>
        </record>
        <menuitem id="crm_medix_calendario" 
                  name="Calendario de citas"
                  parent="crm_medix_root" 
                  action="crm_medix_calendario" 
                  sequence="3"/>
        
        <!-- LLAMADAS -->
        <record id="crm_medix_llamadas" model="ir.actions.act_window">
            <field name="name">Llamadas</field>
            <field name="res_model">x_llamadas</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="crm_medix_llamadas"
                  name="Llamadas"
                  parent="crm_medix_root"
                  action="crm_medix_llamadas"
                  sequence="4"/>

        <!-- RECETAS -->
        <record id="crm_medix_recetas" model="ir.actions.act_window">
            <field name="name">Recetas</field>
            <field name="res_model">recetas.medix</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="crm_medix_recetas"
                  name="Recetas"
                  parent="crm_medix_root"
                  action="crm_medix_recetas"
                  sequence="5"/>

        <!-- FARMACOVIGILANCIA -->
        <record id="crm_medix_farmacovigilacia" model="ir.actions.act_window">
            <field name="name">Farmacovigilancia</field>
            <field name="res_model">farmacovigilancia</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="crm_medix_farmacovigilacia"
                  name="Farmacovigilancia"
                  parent="crm_medix_root"
                  action="crm_medix_farmacovigilacia"
                  sequence="6"/>

        <!-- AJUSTES -->
        <menuitem id="crm_medix_ajustes"
                  name="Ajustes"
                  parent="crm_medix_root"
                  sequence="7"/>
        
        <!-- CUESTIONARIO LLAVE -->
        <record id="crm_medix_cuestionario_llave" model="ir.actions.act_window">
            <field name="name">Cuestionario llave</field>
            <field name="res_model">cuestionario.llave</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="crm_medix_cuestionario_llave"
                  name="Cuestionario llave"
                  parent="crm_medix_ajustes"
                  action="crm_medix_cuestionario_llave"
                  sequence="8"/>
    </data>
</odoo>