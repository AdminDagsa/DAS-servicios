<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="elcti_pacientes_kanban" model="ir.ui.view">
            <field name="name">elcti.pacientes.kanban</field>
            <field name="model">pacientes</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="nombres"/>
                    <field name="primer_apellido"/>
                    <field name="segundo_apellido"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                                <div>
                                    <strong class="o_kanban_record_title"><span><field name="nombres"/></span></strong>
                                </div>
                                <div>
                                    <span class="o_kanban_record_subtitle"><field name="primer_apellido"/></span>
                                </div>
                                <div>
                                  <field name="segundo_apellido"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority"/>
                                        <div class="o_kanban_inline_block">
                                            <field name="activity_ids" widget="kanban_activity"/>
                                        </div>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <record id="elcti_pacientes_vista" model="ir.actions.act_window">
            <field name="name">Pacientes</field>
            <field name="res_model">pacientes</field>
            <field name="view_mode">kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Bienvenido al programa "En línea con tu imagen"
                </p>
                <p>
                    Aquí se mostrarán los pacientes registrados a través de la página web
                </p>
            </field>
        </record>

</data></odoo>
